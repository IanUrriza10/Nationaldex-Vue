{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["DOM"],
		"allowJs": true,
		"noEmit": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowImportingTsExtensions": true
	},
	"include": [
		"src/**/*.vue",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx"
	],
	"exclude": ["node_modules"]
}
